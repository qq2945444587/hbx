.nav-box {
  position: fixed;
  width: 100%;
  min-height: 140rpx;
  z-index: 888;
  top: 0;
}
.nav-box .back-box {
  background-color: rgba(0, 0, 0, 0.18);
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-top: 14rpx;
}
.nav-box .back-hover {
  background-color: rgba(255, 255, 255, 0.18);
}
.nav-box .state-hack {
  width: 100%;
  height: 25px;
}
.groupon-play {
  background: #fff;
  line-height: 94rpx;
}
.groupon-play .title {
  font-size: 28rpx;
  color: #999;
}
.groupon-play .description {
  font-size: 28rpx;
  width: 500rpx;
  margin-left: 30rpx;
}
.tab-box {
  height: 102rpx;
  background: #fff;
  border-bottom: 1rpx solid rgba(223, 223, 223, 0.8);
  margin-top: 10rpx;
}
.tab-box .tab-item {
  flex: 1;
  height: 100%;
  position: relative;
  font-size: 30rpx;
  font-weight: bold;
}
.tab-box .tab-item .tab-line {
  width: 123rpx;
  height: 4rpx;
  left: 50%;
  bottom: 0;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  background: transparent;
  position: absolute;
  z-index: 2;
}
.tab-box .tab-item .line-active {
  background: #a8700d;
}
.tab-detail {
  min-height: 300rpx;
  background: #fff;
}
.tab-detail .goods-size .table-box {
  width: 710rpx;
  margin: auto;
  background: white;
  border: 1rpx solid #dfdfdf;
}
.tab-detail .goods-size .table-box .t-tr {
  border-bottom: 1rpx solid #dfdfdf;
}
.tab-detail .goods-size .table-box .t-tr:last-child {
  border-bottom: none;
}
.tab-detail .goods-size .table-box .t-tr .t-head {
  font-size: 26rpx;
  color: #999;
  flex: 1;
  padding: 15rpx 20rpx;
  height: 100%;
}
.tab-detail .goods-size .table-box .t-tr .t-detail {
  font-size: 26rpx;
  border-left: 1rpx solid #dfdfdf;
  flex: 4;
  padding: 15rpx 20rpx;
  height: 100%;
}
.tab-detail .rich-box ._img {
  display: block;
}
.tab-detail .goods-comment .more-box {
  height: 100rpx;
  background: #fff;
}
.tab-detail .goods-comment .more-box .more-btn {
  width: 200rpx;
  line-height: 60rpx;
  border: 1rpx solid #d5a65a;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #a8700d;
  padding: 0;
  background: #fff;
}
.sku-box {
  line-height: 82rpx;
  background: #fff;
  padding: 0 20rpx;
  margin: 10rpx 0;
  font-size: 28rpx;
}
.sku-box .title {
  color: #999;
  margin-right: 20rpx;
}
.title-box {
  background-color: #fff;
}
.title-box .goods-title {
  font-size: 28rpx;
  font-weight: 600;
  line-height: 42rpx;
}
.title-box .sub-title {
  color: #a8700d;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 42rpx;
}
.tabbar-foot {
  min-height: 100rpx;
  width: 100%;
}
.detail-foot_box {
  min-height: calc(100rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #eeeeee;
  background-color: #fff;
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 999;
}
.detail-foot_box .left,
.detail-foot_box .detail-right {
  flex: 1;
}
.detail-foot_box .tools-item {
  flex: 1;
  height: 100%;
}
.detail-foot_box .tools-item .tool-img {
  width: 46rpx;
  height: 46rpx;
}
.detail-foot_box .tools-item .tool-title {
  font-size: 22rpx;
  line-height: 22rpx;
  padding-top: 8rpx;
}
.detail-foot_box .detail-btn-box {
  flex: 1;
}
.detail-foot_box .detail-btn-box .tool-btn {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.9);
  width: 210rpx;
  min-height: 70rpx;
  border-radius: 35rpx;
  padding: 0;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.detail-foot_box .detail-btn-box .tool-btn .price {
  font-size: 24rpx;
  line-height: 24rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 0.9);
}
.detail-foot_box .detail-btn-box .tool-btn .price-title {
  font-size: 20rpx;
  line-height: 20rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.9);
  padding-top: 8rpx;
}
.detail-foot_box .detail-btn-box .add-btn {
  box-shadow: 0px 2rpx 5rpx 0px rgba(102, 103, 104, 0.46);
  background: linear-gradient(90deg, #676869, #525252);
}
.detail-foot_box .detail-btn-box .pay-btn {
  box-shadow: 0px 7rpx 6rpx 0px rgba(229, 138, 0, 0.22);
  background: linear-gradient(90deg, #e9b461, #eecc89);
}
.detail-foot_box .detail-btn-box .score-btn {
  width: 600rpx;
  line-height: 80rpx;
  background: linear-gradient(90deg, #3185f3, #50cdf2);
  box-shadow: 0px 7px 6px 0px rgba(80, 205, 242, 0.2);
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: white;
  margin-right: 20rpx;
}
.detail-foot_box .detail-btn-box .seckill-btn {
  width: 432rpx;
  line-height: 70rpx;
  background: linear-gradient(93deg, #d01325, #ed3c30);
  box-shadow: 0px 7rpx 6rpx 0px rgba(237, 60, 48, 0.22);
  font-size: 28rpx;
  font-weight: 500;
  color: white;
  border-radius: 35rpx;
  padding: 0;
  margin-right: 20rpx;
}
.detail-foot_box .detail-btn-box .seckilled-btn {
  width: 432rpx;
  line-height: 70rpx;
  background: #dddddd;
  font-size: 28rpx;
  font-weight: 500;
  color: #999999;
  border-radius: 35rpx;
  padding: 0;
  margin-right: 20rpx;
}
.detail-foot_box .detail-btn-box .groupon-btn {
  width: 210rpx;
  height: 70rpx;
  background: linear-gradient(90deg, #fe832a, #ff6600);
  box-shadow: 0px 7rpx 6rpx 0px rgba(255, 104, 4, 0.22);
  border-radius: 35rpx;
}

